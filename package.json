{
  "name": "electron-react-boilerplate",
  "version": "1.0.0",
  "description": "Electron + React boilerplate using create-react-app",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build:prod": "cross-env react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "electron .",
    "electron": "cross-env NODE_ENV=dev ELECTRON_START_URL=http://localhost:3000 nodemon --watch . --exec 'yarn electron:start'",
    "electron:local": "yarn electron:start",
    "build": "rimraf build && yarn build:prod",
    "preDist": "rimraf release && yarn build",
    "dist:all": "yarn preDist && electron-builder -mwl",
    "dist:win": "yarn preDist  && electron-builder -w --x64",
    "dist:linux": "yarn preDist && electron-builder -l",
    "dist:osx": "yarn preDist && electron-builder -m"
  },
  "author": "Diego Bonavida <gecko.bona@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:bonavida/electron-react-boilerplate.git"
  },
  "keywords": [
    "electron",
    "react",
    "boilerplate",
    "create-react-app"
  ],
  "bugs": {
    "url": "https://github.com/bonavida/electron-react-boilerplate/issues"
  },
  "dependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.4",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "node-sass": "^4.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "typescript": "^3.5.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0",
    "nodemon": "^1.19.1",
    "rimraf": "^2.6.3"
  },
  "build": {
    "productName": "Electron React Boilerplate",
    "appId": "bonavida.electron-react.org",
    "electronVersion": "4.1.0",
    "extends": null,
    "files": [
      "build/**/*",
      "electron/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "public.app.category.development"
    },
    "directories": {
      "output": "release"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
